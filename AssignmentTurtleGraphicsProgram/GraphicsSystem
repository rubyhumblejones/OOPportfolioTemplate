package oop;

import java.awt.Color; 
import java.awt.FlowLayout; 
import java.awt.image.BufferedImage; 
import java.io.File;
import java.io.FileNotFoundException;
import java.io.FileWriter;
import java.io.IOException;
import java.util.ArrayList;
import java.util.Scanner; 

import javax.imageio.ImageIO; 
import javax.swing.ImageIcon; 
import javax.swing.JFrame;
import javax.swing.JLabel; 
import javax.swing.JOptionPane; 

import uk.ac.leedsbeckett.oop.LBUGraphics;



public class GraphicsSystem extends LBUGraphics 
{
	public ArrayList<String> user_input = new ArrayList<String>();
	private String file; 
	
		public static void main(String[]args)
		{
			new GraphicsSystem();
		}
		
		public GraphicsSystem()
		{
			JFrame MainFrame = new JFrame();
			MainFrame.setLayout(new FlowLayout());
			MainFrame.add(this);
			MainFrame.setSize(850,450);
			MainFrame.setVisible(true);
			about();	
		}
		public void processCommand(String command)
		{
			displayMessage(""); 
			command.toLowerCase();
			String[] elements = command.split("//s");
			
			for (int i = 0; i < elements.length; i++)
			{
				user_input.add(elements[i]); 
				
			}
			
			try
			{
				Integer.parseInt(elements[i]);
				continue; 
			}
			catch (NumberFormatException e)
			{
				if (elements[i].equals("foward"))
				{
					try {
						int num = Integer.parseInt(elements[i+1]);
						if(num > 0 && num < 600) 
						{
							forward(elements[i+1]);
						}
						else {
							displayMessage("Your parameter is out of bounds");
						}
					}catch  (Exception e1) {
						displayMessage("Invalid parameter"); 
					}
				}
				else if (elements[i].equals("backward"))
				{
					try 
					{
						int num = Integer.parseInt(elements[i+1]);
						if(num > 0 && num < 600)
						{
							forward("-" + elements{i + 1]);
						}
							else {
								displayMessage("Your parameter is out of bounds");
							}
						
					}catch  (Exception e1)
					{
						displayMessage("Invalid parameter"); 
					}
				}
			}
		
}
