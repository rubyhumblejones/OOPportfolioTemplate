package oop;

import java.awt.Color;
import java.awt.FlowLayout;
import javax.swing.JFrame;
import uk.ac.leedsbeckett.oop.OOPGraphics;

public class Main
{
        public static void main(String[] args)
        {
                new Main(); //create instance of class that extends OOPGraphics (could be separate class without main), gets out of static context
        }

        public Main()
        {
                JFrame MainFrame = new JFrame();                //create a frame to display the turtle panel on
                MainFrame.setLayout(new FlowLayout());  //not strictly necessary
                MainFrame.add(this);                                    //"this" is this object that extends turtle graphics so we are adding a turtle graphics panel to the frame
                MainFrame.pack();                                               //set the frame to a size we can see
                MainFrame.setVisible(true);                             //now display it
                about();    
                //call the OOPGraphics about method to display version information.
  
        }

		public void clear(String command)
		{
			JFrame MainFrame = new JFrame(); 
		}

		public void penup(String command)
		{
			
		}
		public void pendown(String command)
		{
			
		}
		public void turnleft(String command)
		{
			
		}
		public void white(String command)
		{
			setcolor(Color.WHITE); 
		}
		public void red(String command)
		{
			setcolor(Color.RED); 
		}
		public void green(String command)
		{
			setcolor(Color.GREEN); 
		}
		public void black(String command)
		{
			setcolor(Color.BLACK); 
		}
		public void processCommand(String command)      //this method must be provided because OOPGraphics will call it when it's JTextField is used
        {
        //String parameter is the text typed into the OOPGraphics JTextfield
        //lands here if return was pressed or "ok" JButton clicked
        
        //TO DO
			if (command.equals("about"))
			{
				about();
			}
			if (command.equals("clear"))
			{
				clear();
			}
			if (command.equals("penup"))
			{
				penup();
			}
			if (command.equals("pendown"))
			{
				pendown();
			}
			if (command.equals("turnleft"))
			{
				turnleft();
			}
			if (command.equals("white"))
			{
				white();
			}
			if (command.equals("red"))
			{
				red();
			}
			if (command.equals("green"))
			{
				green();
			}
			if (command.equals("black"))
			{
				black();
			}
		System.out.println("Pressed" + command);
        }
		

}
